# =============================================================================
# AI Quiz Platform - Production Environment Variables
# =============================================================================
# Copy this file to .env.production and update the values
# NEVER commit .env.production to version control!
# =============================================================================

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=aiquiz
POSTGRES_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD_12345
POSTGRES_DB=aiquiz

# =============================================================================
# JWT Configuration
# =============================================================================
# Generate a strong secret using:
#   node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_TO_A_128_CHARACTER_HEX_STRING_GENERATED_WITH_NODE_CRYPTO
JWT_EXPIRES_IN=24h

# =============================================================================
# CORS Configuration
# =============================================================================
# Update with your actual domain
CORS_ORIGIN=https://yourdomain.com

# =============================================================================
# Frontend Configuration
# =============================================================================
# Frontend runs on port 3010
NEXT_PUBLIC_API_URL=http://localhost:4000/api
NEXT_PUBLIC_APP_NAME=AI Quiz Platform
NEXT_PUBLIC_APP_VERSION=1.0.0

# =============================================================================
# Optional: Email Configuration (for notifications)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# =============================================================================
# Optional: External Services
# =============================================================================
# SENTRY_DSN=your-sentry-dsn
# ANALYTICS_ID=your-analytics-id
