# =============================================================================
# AI Quiz Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# 
# IMPORTANT: Never commit .env file to version control!
# =============================================================================

# =============================================================================
# Application Settings
# =============================================================================
NODE_ENV=production
APP_NAME="AI Quiz Platform"
APP_VERSION=1.0.0

# =============================================================================
# Port Configuration
# =============================================================================
# These ports are exposed on the host machine
FRONTEND_PORT=3010
BACKEND_PORT=4000
DB_PORT=5432
REDIS_PORT=6379
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=aiquiz
# SECURITY: Change this to a strong password in production!
DB_PASSWORD=change_this_to_secure_password_123
DB_DATABASE=aiquiz

# Optional: Enable query logging (only in development)
# DB_LOGGING=false

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
# SECURITY: Set a strong password for production Redis
REDIS_PASSWORD=change_this_redis_password_456

# =============================================================================
# MinIO Configuration (S3-compatible Object Storage)
# =============================================================================
MINIO_ROOT_USER=aiquiz
# SECURITY: Change this to a strong password in production!
MINIO_ROOT_PASSWORD=change_this_minio_password_789
MINIO_BROWSER_REDIRECT_URL=http://localhost:9001

# MinIO Client Configuration (for backend)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=aiquiz
MINIO_SECRET_KEY=change_this_minio_password_789
MINIO_BUCKET_NAME=aiquiz-uploads

# =============================================================================
# JWT Authentication
# =============================================================================
# SECURITY: Generate a strong random secret! Use:
#   node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change_this_to_a_very_long_random_secret_key_min_64_chars_long_for_security
JWT_EXPIRES_IN=24h

# =============================================================================
# API Configuration
# =============================================================================
# URL that the frontend uses to call the backend API
NEXT_PUBLIC_API_URL=http://localhost:4000/api

# URL that the backend uses internally (for server-side calls)
API_URL=http://backend:4000/api

# CORS allowed origins (comma-separated for multiple)
CORS_ORIGIN=http://localhost:3010,http://localhost,http://localhost:80

# =============================================================================
# Security Settings
# =============================================================================
# Bcrypt rounds for password hashing (higher = more secure but slower)
BCRYPT_ROUNDS=12

# Rate limiting
RATE_LIMIT_TTL_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Cache Settings
# =============================================================================
CACHE_TTL_SECONDS=300
CACHE_ENABLED=true

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# Email Configuration (Optional - for password reset, notifications)
# =============================================================================
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@aiquiz.com

# =============================================================================
# External Services (Optional)
# =============================================================================
# S3 compatible storage alternative (if not using MinIO)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_S3_BUCKET=

# =============================================================================
# Monitoring (Optional)
# =============================================================================
# SENTRY_DSN=
# SENTRY_ENVIRONMENT=production

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_ANALYTICS=false

# =============================================================================
# Development Only (do not use in production)
# =============================================================================
# DEBUG=true
# DISABLE_AUTH=false
